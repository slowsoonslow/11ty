      <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="writing__blob writing__blob--2"><path fill="currentColor" d="M49.9,-51.4C60.7,-39,63,-19.5,62.2,-0.8C61.4,17.9,57.6,35.8,46.7,48.9C35.8,61.9,17.9,70.1,2.2,67.9C-13.5,65.6,-27,53.1,-39,40C-50.9,27,-61.3,13.5,-62.9,-1.6C-64.6,-16.8,-57.5,-33.6,-45.5,-46C-33.6,-58.4,-16.8,-66.4,1.3,-67.7C19.5,-69.1,39,-63.8,49.9,-51.4Z" transform="translate(100 100)"/></svg>
      <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" class="writing__blob writing__blob--3"><path fill="currentColor" d="M49.9,-51.4C60.7,-39,63,-19.5,62.2,-0.8C61.4,17.9,57.6,35.8,46.7,48.9C35.8,61.9,17.9,70.1,2.2,67.9C-13.5,65.6,-27,53.1,-39,40C-50.9,27,-61.3,13.5,-62.9,-1.6C-64.6,-16.8,-57.5,-33.6,-45.5,-46C-33.6,-58.4,-16.8,-66.4,1.3,-67.7C19.5,-69.1,39,-63.8,49.9,-51.4Z" transform="translate(100 100)"/></svg>
    </div>
    <ul class="writing__posts">
      {%- for page in collections.all -%}
      {% if page.data.title %}
      <div class="writing__post">
        <p class="writing__post-date">{{ page.date.toLocaleDateString() }}</p>
        <a href="{{ page.url }}">
          <h2 class="writing__post-title">{{ page.data.title }}</h2>
          <p class="writing__post-description">{{ page.data.description }}</p>
        </a>
        <ul class="writing__post-tags">
          {%- for tag in page.data.tags -%}
          <li>
            <a class="[ writing__post-tag ] [ post-tag ]" href="/tags/{{ tag }}/">
            {{ tag }}
            </a>
          </li>
          {%- endfor -%}
         </ul>
      </div>
      {% endif %}
      {%- endfor -%}
    </ul>
  </div>
</main>

{% include 'footer.njk' %}
